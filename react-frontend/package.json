{
  "name": "taxaminer-dashboard",
  "version": "1.0.1",
  "private": true,
  "description": "An interactive visualization tool for taXaminer output data.",
  "author": {
    "name": "Lucas Koch",
    "email": "mail.lucas.koch@gmail.com"
  },
  "build": {
    "appId": "com.taxaminer_dash",
    "files": [
      "public/**/*"
    ],
    "extraResources": [
      "./api_dist/main"
    ],
    "linux": {
      "category": "scientific"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "chroma-js": "^2.4.2",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "mathjs": "^11.6.0",
    "plotly.js": "^2.13.2",
    "ps-tree": "^1.2.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.4.0",
    "react-bootstrap-table-next": "https://gitpkg.now.sh/BonnierNews/react-bootstrap-table2/packages/react-bootstrap-table2?v2.0.3",
    "react-bootstrap-table2-filter": "^1.3.3",
    "react-bootstrap-table2-paginator": "^2.1.2",
    "react-dom": "^18.2.0",
    "react-plotly.js": "^2.5.1",
    "react-select": "^5.3.2",
    "react-window": "^1.8.7",
    "serve": "^14.2.0",
    "typescript": "^4.7.4",
    "underscore": "^1.13.6"
  },
  "overrides": {
    "d3-color": "3.1.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build --linux deb",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/chroma-js": "^2.1.5",
    "@types/react-bootstrap-table-next": "^4.0.18",
    "@types/react-bootstrap-table2-filter": "^1.3.4",
    "@types/react-bootstrap-table2-paginator": "^2.1.2",
    "@types/react-bootstrap-table2-toolkit": "^2.1.7",
    "@types/react-plotly.js": "^2.5.1",
    "@types/react-table": "^7.7.12",
    "@types/react-window": "^1.8.5",
    "concurrently": "^8.2.0",
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1"
  }
}
